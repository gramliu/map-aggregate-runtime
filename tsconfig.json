{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": ".",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src"],
    "experimentalDecorators": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "jest.config.js",
    "input",
    "test",
    "core",
    "nodes",
    "util",
    "index.d.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
